<!DOCTYPE html>
<html lang="en">
  <%- include ('../../partials/header') %>
  <body>
    <%- include ('../../partials/navbar') %>
    <div class="container">
      <br />
      <div class="card">
        <div class="card-header">
          <a href="/blog/admin/categories" class="pull-right">Voltar</a>
          <hr />
          <h2>
            Editar Categoria::
            <strong class="alert alert-primary"><%= cat.title %></strong>
          </h2>
        </div>
        <div class="card-body">
          <form method="POST" action="/blog/admin/categories/update">
            <input type="hidden" name="id" value="<%= cat.id %>" />
            <input
              type="text"
              name="title"
              value="<%= cat.title %>"
              class="form-control"
              placeholder="Crie o tipo de categoria"
            />
            <br />
            <button class="btn btn-success">Atualizar</button>
          </form>
        </div>
      </div>
    </div>
  </body>
  <%- include ('../../partials/footer') %>
</html>
